# Flake8 Configuration (Linting)
# ===============================

[flake8]
max-line-length = 100
extend-ignore = E203, E266, E501, W503
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    quantum-ui

per-file-ignores =
    __init__.py:F401

# Python Black compatibility
max-complexity = 10
